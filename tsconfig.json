{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "#imports": ["./.nuxt/imports.d.ts"]
    },
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": ["@nuxt/types", "@nuxtjs/color-mode"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "composite": true
  },
  "include": [
    "./types/**/*.d.ts",
    "**/*.ts",
    "**/*.vue",
    "**/*.js",
    "./.nuxt/imports.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}